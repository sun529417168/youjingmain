<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="51dp"
    android:background="@color/translucence_">


    <RelativeLayout
        android:id="@+id/re_teacher_info"
        android:layout_width="match_parent"
        android:layout_height="51dp">



        <RelativeLayout
            android:id="@+id/re_live_room_gift"
            android:layout_width="14dp"
            android:layout_height="17dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp">
            <ImageView
                android:id="@+id/img_live_room_gift"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/img_live_room_ranking_red" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="1"
                android:layout_marginTop="0.5dp"
                android:textColor="@color/white"
                android:textSize="8sp"/>
        </RelativeLayout>




        <com.youjing.yjeducation.wiget.CustomImage
            android:id="@+id/img_user_photo"
            style="@style/image_style"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/re_live_room_gift"
            android:scaleType="fitXY"
            android:src="@mipmap/img_app_logo" />

        <TextView
            android:id="@+id/txt_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="9dp"
            android:layout_toRightOf="@id/img_user_photo"
            android:text="快乐天使"
            android:textColor="@color/white"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/txt_resume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_user_name"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/img_user_photo"
            android:text="消费"
            android:textColor="@color/yellow_text"
            android:textSize="10sp" />
        <ImageView
            android:id="@+id/img_whale_money"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_below="@id/txt_user_name"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@id/txt_resume"
            android:src="@mipmap/whale_money" />


        <TextView
            android:id="@+id/txt_whale_money_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_user_name"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@id/img_whale_money"
            android:text="500"
            android:textColor="@color/yellow_text"
            android:textSize="10sp" />

        <ImageView
            android:layout_width="8dp"
            android:layout_height="12dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:background="@mipmap/img_live_rangking_down" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/gray_live_bg" />
</RelativeLayout>