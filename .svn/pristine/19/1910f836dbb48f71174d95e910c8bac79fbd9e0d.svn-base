<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_alignParentBottom="true">


        <RelativeLayout
            android:id="@+id/re_advice_phone"
            android:layout_width="0dp"
            android:clickable="true"
            android:background="@color/white"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentTop="true"
                android:background="@color/view" />
            <TextView
                android:id="@+id/txt_advice_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:textColor="@color/gray_text"
                android:layout_marginBottom="3dp"
                android:text="电话咨询"/>
            <ImageView
                android:id="@+id/img_advice_phone"
                android:layout_width="26dp"
                android:layout_height="28dp"
                android:clickable="true"
                android:layout_marginBottom="2dp"
                android:layout_centerHorizontal="true"
                android:layout_above="@id/txt_advice_phone"
                android:src="@mipmap/img_advice_phone" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/re_advice_qq"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:clickable="true"
            android:layout_weight="1">
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentTop="true"
                android:background="@color/view" />
            <TextView
                android:id="@+id/txt_advice_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:textColor="@color/gray_text"
                android:layout_marginBottom="3dp"
                android:text="在线客服"/>
            <ImageView
                android:id="@+id/img_advice_qq"
                android:layout_width="28.5dp"
                android:layout_height="31dp"
                android:clickable="true"
                android:layout_marginBottom="2dp"
                android:layout_above="@id/txt_advice_qq"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/img_advice_qq" />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_apply"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:background="#FF9E19"
            android:gravity="center"
            android:text="立即报名"
            android:textColor="@color/white"
            android:textSize="17sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_play"
        android:layout_width="match_parent"
        android:layout_above="@id/ll_bottom"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.letv.skin.v4.V4PlaySkin
                    android:id="@+id/videobody"
                    android:layout_width="match_parent"
                    android:layout_height="203dp"
                    android:clickable="true">

                </com.letv.skin.v4.V4PlaySkin>

                <ImageView
                    android:id="@+id/img_play_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/videobody"
                    android:layout_alignTop="@id/videobody"
                    android:scaleType="fitXY" />

                <RelativeLayout
                    android:id="@+id/re_play_start_de"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/videobody"
                    android:layout_alignTop="@id/videobody"
                    android:background="@color/transparent"
                    android:clickable="true">

                    <ImageView
                        android:id="@+id/img_play_start_de"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerInParent="true"
                        android:clickable="true"
                        android:src="@mipmap/play_start_de"
                        android:visibility="visible" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_alignBottom="@id/videobody"
                android:layout_alignTop="@id/videobody">

                <ImageView
                    android:id="@+id/img_play_return"
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="9dp"
                    android:clickable="true"
                    android:src="@mipmap/play_return" />
            </RelativeLayout>
        </FrameLayout>


        <LinearLayout
            android:id="@+id/top_ly"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:clickable="true"
                android:gravity="center"
                android:text="课程目录"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:clickable="true"
                android:gravity="center"
                android:text="课程信息"
                android:textColor="@color/gray_text" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:clickable="true"
                android:gravity="center"
                android:text="推荐课程"
                android:textColor="@color/gray_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/white"
            android:orientation="horizontal">
            <View
                android:id="@+id/view_line_one"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/blue_course_play" />
            <View
                android:id="@+id/view_line_two"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/white" />
            <View
                android:id="@+id/view_line_three"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/gray_view_bg" />


        <ImageView
            android:id="@+id/cursor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/top_ly"
            android:scaleType="matrix"
            android:visibility="gone" />

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/cursor"
            android:layout_gravity="center" />
    </LinearLayout>




</RelativeLayout>