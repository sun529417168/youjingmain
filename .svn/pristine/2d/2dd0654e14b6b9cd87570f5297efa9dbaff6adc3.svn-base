<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/re_gray_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="304dp"
        android:layout_height="216dp"
        android:layout_centerInParent="true"
        android:background="@mipmap/img_grab_red_bag_bg"
        android:clickable="true">

        <TextView
            android:id="@+id/obtain_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp"
            android:text="　鲸币可以购买课程，赠送礼物"
            android:textColor="@color/yellow_text"
            android:textSize="12sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp">

            <TextView
                android:id="@+id/txt_get"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"
                android:text="获得"
                android:textColor="@color/red_text"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/img_rmb"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@id/txt_get"
                android:src="@mipmap/red_bag_whale_money" />

            <TextView
                android:id="@+id/txt_whale_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@id/img_rmb"
                android:text=""
                android:textColor="@color/red_text"
                android:textSize="14sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/txt_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/obtain_money"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="9dp"
            android:text="恭喜赵四同学"
            android:textColor="@color/yellow_text"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/img_reb_bag_de"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="55dp"
            android:clickable="true"
            android:src="@mipmap/img_reb_bag_de" />
    </RelativeLayout>
</RelativeLayout>