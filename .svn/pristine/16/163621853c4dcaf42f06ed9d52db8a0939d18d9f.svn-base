<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="161dp"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/view_course_related_book_layout"
        android:layout_width="match_parent"
        android:layout_height="39dp">

        <ImageView
            android:id="@+id/book_image"
            android:layout_width="14dp"
            android:layout_height="17dp"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/view_course_related_book" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/book_image"
            android:text="图书推荐"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </RelativeLayout>

    <com.youjing.yjeducation.wiget.CourseNewGridview
        android:id="@+id/item_course_realted_layoutGridview"
        android:layout_width="match_parent"
        android:layout_height="122dp"
        android:horizontalSpacing="8dp"
        android:numColumns="3"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:stretchMode="columnWidth"
        android:verticalSpacing="10dp" />
</LinearLayout>