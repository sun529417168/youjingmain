<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:id="@+id/lay_item"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:clickable="true"
        android:background="@drawable/item_change_bg">

        <ImageView
            android:id="@+id/img_course_teacher"
            android:layout_width="113dp"
            android:layout_height="72dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:focusable="false"
            android:src="@mipmap/course_teacher" />

        <RelativeLayout
            android:id="@+id/lay_join"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/img_course_teacher">


            <LinearLayout
                android:id="@+id/ll_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_new_course"
                    android:layout_width="18dp"
                    android:layout_height="17dp"
                    android:layout_marginLeft="15dp"
                    android:src="@mipmap/course_item_new" />

                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="连接体的解题方法"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_below="@id/ll_title"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_teacher_head"
                    android:layout_width="10dp"
                    android:layout_height="11dp"
                    android:layout_marginLeft="15dp"
                    android:src="@mipmap/img_my_teacher" />

                <TextView
                    android:id="@+id/txt_teacher_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    android:text="张良东" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_money_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="大小 48.6M"
                    android:layout_centerVertical="true"
                    android:textColor="@color/gray_text"
                    android:layout_marginLeft="15dp"
                    android:textSize="12sp" />


            </RelativeLayout>
            <TextView
                android:id="@+id/txt_download_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dp"
                android:text="下载"
                android:textColor="@color/yellow_text"
                android:textSize="14sp" />
            <RadioButton
                android:id="@+id/rb_select_download"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/pay_btn_bg"
                android:layout_marginRight="8dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dp"
                android:visibility="gone"
                android:checked="true"
                android:button="@null"
                android:layout_alignParentRight="true" />

        </RelativeLayout>

    </RelativeLayout>
    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/view" />
</RelativeLayout>