<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relayout_my_course"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ListView
        android:id="@+id/lv_liveclass"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title"
        android:background="@color/white"
        android:cacheColorHint="@android:color/transparent"
        android:divider="#00000000"
        android:fadingEdge="vertical"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:scrollingCache="false"
        android:visibility="gone">

    </ListView>


    <LinearLayout
        android:id="@+id/ll_no_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="190dp"
                android:layout_height="138dp"
                android:layout_centerInParent="true"
                android:background="@mipmap/obtain_medal_image"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/txt_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="课程拼命组装中"
                android:textColor="@color/gray_text"
                android:textSize="19sp" />
            <TextView
                android:id="@+id/txt_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/txt_up"
                android:layout_marginTop="9dp"
                android:visibility="visible"
                android:text="要不先去围观大家都在学啥？"
                android:textColor="@color/gray_text"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/txt_select_course"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/txt_down"
                android:layout_marginTop="35dp"
                android:gravity="center"
                android:text="立 即 前 往"
                android:clickable="true"
                android:background="@drawable/shape_bluetwo_round"
                android:textColor="@color/white"
                android:textSize="19sp" />
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>