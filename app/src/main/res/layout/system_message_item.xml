<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:id="@+id/lay_item"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:background="@drawable/item_change_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/re_order_num"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_message_point"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="8dp"
                android:background="@mipmap/img_message_point" />

            <TextView
                android:id="@+id/txt_message_time"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="6dp"
                android:layout_marginRight="8dp"
                android:gravity="right"
                android:textColor="@color/gray_text"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/txt_message_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="7dp"
                android:layout_toRightOf="@id/img_message_point"
                android:text="[系统通知]"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt_message_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="7dp"
                android:layout_toRightOf="@id/txt_message_type"
                android:layout_toLeftOf="@id/txt_message_time"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="14sp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_message_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="29dp"
                android:layout_marginTop="2dp"
                android:singleLine="true"
                android:textColor="@color/gray_text"
                android:textSize="11sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_height_width"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/view" />
    </LinearLayout>

</RelativeLayout>