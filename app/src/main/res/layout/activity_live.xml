<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_view_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.letv.skin.v4.V4PlaySkin
                android:id="@+id/videobody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </com.letv.skin.v4.V4PlaySkin>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_play_return"
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="9dp"
                    android:src="@mipmap/play_return" />
            </RelativeLayout>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="补形法妙解外接球问题"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:text="本课程购买后方可观看"
                    android:textColor="@color/yellow_text"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/txt_num_praise"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_text"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:text="8596"
                    android:textSize="10sp"/>
                <ImageButton
                    android:id="@+id/img_praise"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_toLeftOf="@id/txt_num_praise"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/play_praise_de" />
                <ImageButton
                    android:id="@+id/img_share"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/img_praise"
                    android:layout_marginRight="26dp"
                    android:background="@mipmap/play_share" />
                <ImageButton
                    android:id="@+id/img_download"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerInParent="true"
                    android:layout_toLeftOf="@id/img_share"
                    android:layout_marginRight="26dp"
                    android:background="@mipmap/play_download" />

            </RelativeLayout>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="10dp"
            android:background="@color/course_item_bg_de"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="速解高中数学面积问题解题演示（6）"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:gravity="center_vertical"
            android:background="@color/white">
            <TextView
                android:id="@+id/txt_num"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="01"
                android:gravity="center"
                android:layout_marginLeft="8dp"
                android:textSize="10sp"
                android:textColor="@color/gray_text"/>
            <ImageView
                android:id="@+id/img_triangle"
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:src="@mipmap/button_play_de"
                android:layout_toRightOf="@id/txt_num"/>

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="三角形补圆术讲解"
                android:layout_marginLeft="6dp"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                android:layout_toRightOf="@id/img_triangle"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/txt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="05:17"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textSize="11sp"
                android:layout_toRightOf="@id/txt_title"
                android:textColor="@color/gray_text"/>
            <TextView
                android:id="@+id/txt_learn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已学习"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textSize="13sp"
                android:layout_marginRight="8dp"
                android:textColor="@color/blue_title"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="30dp"
            android:background="@color/white">
            <com.youjing.yjeducation.wiget.CustomImage
                android:id="@+id/img_teacher_photo"
                style="@style/image_style"
                android:layout_width="47dp"
                android:layout_height="47dp"
                android:scaleType="fitXY"
               android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:src="@mipmap/user_default_photo" />
            <TextView
                android:id="@+id/txt_teacher_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_toRightOf="@id/img_teacher_photo"
                android:layout_marginTop="18dp"
                android:textSize="14sp"
                android:layout_marginLeft="8dp"
                android:text="张良东"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_text"
                android:layout_toRightOf="@id/img_teacher_photo"
                android:layout_below="@id/txt_teacher_name"
                android:layout_marginTop="5dp"
                android:textSize="11sp"
                android:layout_marginLeft="8dp"
                android:text="视频数：23"/>

            <Button
                android:id="@+id/bt_enter_group"
                android:layout_width="84dp"
                android:layout_height="26dp"
                android:textSize="14sp"
                android:text="进入群组"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:background="@mipmap/course_button_pressed"
                android:textColor="@color/white" />
        </RelativeLayout>

    </LinearLayout>
    <Button
        android:id="@+id/btn_apply"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:gravity="center"
        android:background="#FF9E19"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:layout_alignParentBottom="true"
        android:text="立刻报名 ￥150.00"/>
</RelativeLayout>