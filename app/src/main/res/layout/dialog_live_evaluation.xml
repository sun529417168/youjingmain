<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/re_gray_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/translucence_"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="266dp"
        android:layout_height="176dp"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_white_round_nopading"
        android:clickable="true">

        <RelativeLayout
            android:id="@+id/re_title"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/shape_gray_round_nopading">

            <TextView
                android:id="@+id/txt_gift_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="9dp"
                android:clickable="true"
                android:text="接下来轮到你给老师打分了"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <RelativeLayout
                android:id="@+id/img_delete"
                android:layout_width="30dp"
                android:clickable="true"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true">
                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/img_delete" />
            </RelativeLayout>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/lay_comment_start"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_below="@id/re_title"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_start1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@null"
                android:padding="3dp"
                android:src="@mipmap/img_start_no_comment" />

            <ImageButton
                android:id="@+id/btn_start2"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:padding="3dp"
                android:src="@mipmap/img_start_no_comment" />

            <ImageButton
                android:id="@+id/btn_start3"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:padding="3dp"
                android:src="@mipmap/img_start_no_comment" />

            <ImageButton
                android:id="@+id/btn_start4"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:padding="3dp"
                android:src="@mipmap/img_start_no_comment" />

            <ImageButton
                android:id="@+id/btn_start5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:background="@null"
                android:padding="3dp"
                android:src="@mipmap/img_start_no_comment" />

        </LinearLayout>
        <EditText
            android:id="@+id/ed_comment"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:background="@drawable/edittext_gray_bg"
            android:gravity="center_vertical"
            android:layout_marginRight="12dp"
            android:layout_below="@id/lay_comment_start"
            android:layout_marginLeft="12dp"
            android:hint="请评价课程"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textSize="10sp" />


        <Button
            android:id="@+id/btn_comment"
            android:layout_width="88dp"
            android:layout_height="32dp"
            android:layout_marginTop="15dp"
            android:layout_below="@id/ed_comment"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_blue_round"
            android:text="发表评价"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </RelativeLayout>
</RelativeLayout>