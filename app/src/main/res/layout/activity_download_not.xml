<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <TextView
                android:id="@+id/txt_course_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:text="本节课共5节,"/>
            <TextView
                android:id="@+id/txt_course_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                android:layout_toRightOf="@id/txt_course_num"
                android:textColor="@color/black"
                android:text="总大小为368M"/>
            <TextView
                android:id="@+id/txt_down_load"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                android:layout_alignParentRight="true"
                android:textColor="@color/blue_title"
                android:text="批量下载"/>


        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="9dp"
            android:background="@color/gray_view_bg" />
        <ListView
            android:id="@+id/lv_course_download"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:cacheColorHint="@android:color/transparent"
            android:divider="#00000000"
            android:fadingEdge="none"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:scrollingCache="false">

        </ListView>
    </LinearLayout>


</RelativeLayout>