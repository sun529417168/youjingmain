<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_new_course_image"
        android:layout_width="174dp"
        android:layout_height="98dp" />

    <TextView
        android:id="@+id/item_new_course_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_new_course_image"
        android:layout_marginTop="7dp"
        android:ellipsize="end"
        android:maxEms="11"
        android:textColor="@color/black"
        android:singleLine="true"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_new_course_info"
        android:layout_marginTop="9dp">

        <TextView
            android:id="@+id/item_new_course_money_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/yellow_text"
            android:layout_centerVertical="true"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/item_new_course_money_logo"
            android:layout_width="12sp"
            android:layout_height="12sp"
            android:layout_centerVertical="true"
             />

        <TextView
            android:id="@+id/item_new_course_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/item_new_course_money_logo"
            android:text=""
            android:textColor="@color/yellow_text"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/item_new_course_money_old"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/item_new_course_money"
            android:text=""
            android:textColor="@color/gray_text"
            android:textSize="11sp" />
    </RelativeLayout>
</RelativeLayout>