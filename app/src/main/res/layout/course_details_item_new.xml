<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/re_item"
    android:layout_width="match_parent"
    android:layout_height="53dp"
    android:background="@drawable/item_change_background">

    <RelativeLayout
        android:id="@+id/re_lay_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:visibility="visible">


        <TextView
            android:id="@+id/txt_num"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="01"
            android:textColor="@color/gray_text"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/img_triangle"
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/txt_num"
            android:src="@mipmap/button_play_de" />
        <TextView
            android:id="@+id/txt_status_live_one"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:layout_toRightOf="@+id/img_triangle"
            android:background="@drawable/shape_blue_round_nopadding"
            android:gravity="center"
            android:text="视频"
            android:textColor="@color/white"
            android:textSize="10sp" />
        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:singleLine="true"
            android:gravity="center"
            android:maxEms="11"
            android:ellipsize="end"
            android:layout_toRightOf="@id/txt_status_live_one"
            android:text="fghfhgfdh"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@id/txt_title"
            android:text="022020"
            android:textColor="@color/gray_text"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/txt_course_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="已开课"
            android:textColor="@color/gray_text"
            android:textSize="12sp"
            android:visibility="visible" />

        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="30dp"
            android:background="@color/view" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/re_lay_two"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:visibility="gone">


        <TextView
            android:id="@+id/txt_num_two"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="01"
            android:textColor="@color/gray_text"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/img_triangle_two"
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/txt_num_two"
            android:src="@mipmap/button_play_de" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/img_triangle_two"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginRight="10dp"
                android:layout_height="26dp">

                <TextView
                    android:id="@+id/txt_status_live"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="1.5dp"
                    android:layout_marginLeft="5dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:background="@drawable/shape_yellow_round_nopadding"
                    android:gravity="center"
                    android:text="直播"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/txt_title_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="5dp"
                    android:singleLine="true"
                    android:maxEms="14"
                    android:ellipsize="end"
                    android:layout_toRightOf="@id/txt_status_live"
                    android:text="水电费的说法是打发第三方"
                    android:textColor="@color/black"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/txt_time_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/txt_title_two"
                    android:text="33333"
                    android:gravity="center"
                    android:layout_alignBottom="@id/txt_title_two"
                    android:layout_alignTop="@id/txt_title_two"
                    android:textColor="@color/gray_text"
                    android:textSize="11sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="25dp">

                <TextView
                    android:id="@+id/txt_time_dowm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="2dp"
                    android:text="水电费的说法是打发第三方"
                    android:textColor="@color/yellow_text"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txt_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="3dp"
                    android:text="未开始"
                    android:textColor="@color/gray_text"
                    android:textSize="12sp" />
            </RelativeLayout>


        </LinearLayout>


        <View
            android:id="@+id/view_line_two"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="30dp"
            android:background="@color/view" />
    </RelativeLayout>
</RelativeLayout>