<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:id="@+id/lay_item"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:clickable="true"
        android:background="@drawable/item_change_bg"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <RelativeLayout
            android:id="@+id/re_order_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="7dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_order_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单号：12258586666"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt_order_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="2016-06-15 16:22"
                android:textColor="@color/gray_text"
                android:textSize="12sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/re_order_num"
            android:layout_marginTop="3dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="连接体的解题方法"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_title"
            android:layout_marginTop="3dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_teacher_head"
                android:layout_width="10dp"
                android:layout_height="11dp"
                android:src="@mipmap/img_my_teacher" />

            <TextView
                android:id="@+id/txt_teacher_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="张良东"
                android:textColor="@color/black"
                android:textSize="12dp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_rmb"
                android:layout_width="9dp"
                android:layout_height="10dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/img_rmb" />

            <TextView
                android:id="@+id/txt_rmb_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/img_rmb"
                android:text="150"
                android:textColor="@color/yellow_text"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/txt_buy_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="已支付"
                android:visibility="invisible"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </RelativeLayout>
        <Button
            android:id="@+id/btn_pay_now"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="立即支付"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:background="@mipmap/pay_yellow_bg"
            android:layout_marginBottom="8dp"/>

    </RelativeLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="9dp"
        android:layout_below="@id/lay_item"
        android:background="@color/view" />
</RelativeLayout>