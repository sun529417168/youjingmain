<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_view_bg">


    <include
        android:id="@+id/title"
        layout="@layout/title_blue_bg" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_view_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray_view_bg"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/lay_answer_time_order"
                android:layout_width="match_parent"
                android:layout_height="290dp"
                android:background="@color/white"
                android:paddingLeft="@dimen/my_common_margin_min"
                android:paddingRight="@dimen/my_common_margin_min">

                <TextView
                    android:id="@+id/txt_whale_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/gray_text"
                    android:textSize="14sp"
                    android:text="鲸币余额" />

                <ImageView
                    android:id="@+id/img_money"
                    android:layout_width="67dp"
                    android:layout_height="90dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="16dp"
                    android:layout_above="@id/txt_whale_money"
                    android:src="@mipmap/img_money_big"/>
                <TextView
                    android:id="@+id/txt_whale_money_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/txt_whale_money"
                    android:textColor="@color/yellow_text"
                    android:textSize="29sp"
                    android:text="" />
                <Button
                    android:id="@+id/btn_recharge"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:background="@color/yellow_text"
                    android:text="充值"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="21dp"
                    android:textColor="@color/white"
                    android:textSize="17sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/re_consume_history"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:clickable="true"
                android:layout_marginTop="9dp"
                android:background="@drawable/item_change_bg"
                android:paddingLeft="@dimen/my_common_margin_min"
                android:paddingRight="@dimen/my_common_margin_min">

                <ImageView
                    android:id="@+id/img_answer_time_order"
                    style="@style/image_style"
                    android:src="@mipmap/img_history" />

                <TextView
                    android:id="@+id/txt_consume_history"
                    style="@style/middle_black_text_style"
                    android:layout_marginLeft="9dp"
                    android:textSize="14sp"
                    android:layout_toRightOf="@id/img_answer_time_order"
                    android:text="鲸币明细" />

                <ImageView
                    android:id="@+id/btn_consume_history"
                    style="@style/right_arrow_style"
                    android:layout_marginLeft="@dimen/my_common_margin_small" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/re_totay_profit"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:clickable="true"
                android:visibility="gone"
                android:background="@drawable/item_change_bg"
                android:paddingLeft="@dimen/my_common_margin_min"
                android:paddingRight="@dimen/my_common_margin_min">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_height_width"
                    android:layout_alignParentTop="true"
                    android:background="@color/view" />

                <ImageView
                    android:id="@+id/img_totay_profit"
                    style="@style/image_style"
                    android:src="@mipmap/img_today_profit" />

                <TextView
                    android:id="@+id/txt_totay_profit"
                    style="@style/middle_black_text_style"
                    android:layout_marginLeft="9dp"
                    android:textSize="14sp"
                    android:layout_toRightOf="@id/img_totay_profit"
                    android:text="今日收益" />


                <ImageView
                    android:id="@+id/btn_totay_profit"
                    style="@style/right_arrow_style" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/re_appoint_course"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:background="@drawable/item_change_bg"
                android:clickable="true"
                android:layout_marginTop="9dp"
                android:paddingLeft="@dimen/my_common_margin_min"
                android:paddingRight="@dimen/my_common_margin_min">

                <ImageView
                    android:id="@+id/img_appoint_course"
                    style="@style/image_style"
                    android:src="@mipmap/img_find_lesson" />

                <TextView
                    android:id="@+id/txt_appoint_course"
                    android:layout_marginLeft="9dp"
                    android:textSize="14sp"
                    style="@style/middle_black_text_style"
                    android:layout_toRightOf="@id/img_appoint_course"
                    android:text="找课程" />

                <ImageView
                    style="@style/right_arrow_style" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_height_width"
                    android:layout_alignParentBottom="true"
                    android:background="@color/view" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/re_goto_question"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:clickable="true"
                android:background="@drawable/item_change_bg"
                android:paddingLeft="@dimen/my_common_margin_min"
                android:paddingRight="@dimen/my_common_margin_min">

                <ImageView
                    android:id="@+id/img_give_gift"
                    style="@style/image_style"
                    android:src="@mipmap/img_goto_question" />

                <TextView
                    android:id="@+id/txt_give_gift"
                    android:layout_marginLeft="9dp"
                    android:textSize="14sp"
                    style="@style/middle_black_text_style"
                    android:layout_toRightOf="@id/img_give_gift"
                    android:text="去提问" />

                <ImageView
                    style="@style/right_arrow_style" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_height_width"
                    android:layout_alignParentBottom="true"
                    android:background="@color/view" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/re_goto_video"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:clickable="true"
                android:background="@drawable/item_change_bg"
                android:paddingLeft="@dimen/my_common_margin_min"
                android:paddingRight="@dimen/my_common_margin_min">

                <ImageView
                    android:id="@+id/img_challenge_right"
                    style="@style/image_style"
                    android:src="@mipmap/img_watch_video" />

                <TextView
                    android:id="@+id/txt_challenge_right"
                    android:layout_marginLeft="9dp"
                    android:textSize="14sp"
                    style="@style/middle_black_text_style"
                    android:layout_toRightOf="@id/img_challenge_right"
                    android:text="看直播" />

                <ImageView
                    style="@style/right_arrow_style" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>