<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/re_gray_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/translucence_"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="311dp"
        android:layout_height="238dp"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_white_round_nopading"
        android:clickable="true">

        <RelativeLayout
            android:id="@+id/re_title"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/shape_gray_round_nopading">

            <TextView
                android:id="@+id/txt_recommend_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="9dp"
                android:clickable="true"
                android:text="本场直播"
                android:textColor="@color/black"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/txt_gift_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/txt_recommend_title"
                android:clickable="true"
                android:text="专属特价课程"
                android:textColor="@color/yellow_text"
                android:textSize="14sp" />

            <RelativeLayout
                android:id="@+id/img_delete"
                android:layout_width="30dp"
                android:clickable="true"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true">
                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/img_delete" />
            </RelativeLayout>


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5.5dp"
            android:layout_below="@id/re_title">

            <ListView
                android:id="@+id/lv_live_recommend"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_white_round_nopading_"
                android:cacheColorHint="@android:color/transparent"
                android:divider="#00000000"
                android:fadingEdge="none"
                android:overScrollMode="never"
                android:scrollbars="none"
                android:scrollingCache="false">

            </ListView>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>