<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="48dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginStart="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/send_btn"
        style="@style/send_btn_style"
        android:layout_centerInParent="true"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/flower_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:scaleType="centerInside"
        android:src="@mipmap/giveflower" />

    <TextView
        android:id="@+id/flower_num"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_alignRight="@id/flower_btn"
        android:layout_alignTop="@id/flower_btn"
        android:background="@drawable/flower_num_bg"
        android:gravity="center"
        android:text="0"
        android:visibility="gone"
        android:textColor="@color/white"
        android:textSize="10sp" />
</RelativeLayout>