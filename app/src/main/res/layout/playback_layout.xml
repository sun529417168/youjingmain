<?xml version="1.0" encoding="utf-8"?><merge xmlns:android="http://schemas.android.com/apk/res/android">    <LinearLayout        android:id="@+id/play_container"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:orientation="vertical">        <RelativeLayout            android:id="@+id/ppt_container"            android:layout_width="match_parent"            android:layout_height="200dp">            <LinearLayout                android:id="@+id/operation_btn_container"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_alignParentRight="true"                android:layout_centerVertical="true"                android:layout_margin="10dp"                android:orientation="vertical">                <ImageView                    android:id="@+id/fullScreen_iv"                    style="@style/float_iv_bg"                    android:src="@mipmap/fullscreen" />                <ImageView                    android:id="@+id/video_visibility_iv"                    style="@style/float_iv_bg"                    android:src="@mipmap/video_visible" />            </LinearLayout>            <include                android:id="@+id/seek_bar_layout"                layout="@layout/playback_seek_bar_layout"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_alignParentBottom="true" />            <ImageView                android:id="@+id/go_back"                style="@style/float_iv_bg"                android:src="@mipmap/go_back" />        </RelativeLayout>        <LinearLayout            android:id="@+id/tab_container"            android:layout_width="match_parent"            android:layout_height="0dp"            android:layout_weight="1"            android:orientation="vertical">            <include layout="@layout/tab_layout" />            <android.support.v4.view.ViewPager                android:id="@+id/view_pager"                android:layout_width="match_parent"                android:layout_height="match_parent" />        </LinearLayout>    </LinearLayout>    <FrameLayout        android:id="@+id/video_container"        android:layout_width="160dp"        android:layout_height="120dp" /></merge>